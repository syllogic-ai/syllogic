# Database
DATABASE_URL=postgresql+psycopg://financeuser:financepass@localhost:5433/finance_db
# Production example:
# DATABASE_URL=postgresql+psycopg://financeuser:financepass@db:5432/finance_db?sslmode=require

# Redis
REDIS_URL=redis://localhost:6379/0

# Frontend / CORS
APP_URL=http://localhost:8080
# Optional explicit overrides (defaults derive from APP_URL in app code)
# FRONTEND_URL=http://localhost:8080
# CORS_ALLOW_ORIGINS=http://localhost:8080

# Optional toggles
API_DOCS_ENABLED=false
AUTO_CREATE_TABLES=false

# Optional integrations
OPENAI_API_KEY=
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENVIRONMENT=sandbox
KRAKEN_API_KEY=
KRAKEN_PRIVATE_KEY=

# Demo environment controls
# Enable only in dedicated demo deployments.
DEMO_MODE=false
# Shared demo account identity (provide one or both)
DEMO_SHARED_USER_EMAIL=
DEMO_SHARED_USER_ID=
# Nightly reset controls (UTC)
DEMO_RESET_ENABLED=false
DEMO_RESET_HOUR_UTC=0
# Daily transaction engine controls (adds previous-day demo transactions)
DEMO_DAILY_ENGINE_ENABLED=false
DEMO_DAILY_ENGINE_HOUR_UTC=2
DEMO_DAILY_ENGINE_MINUTE_UTC=15
# Deterministic random seed for demo data generation
DEMO_SEED_RANDOM_SEED=42

# Optional application-layer encryption (recommended for production).
# Use a 32-byte key encoded as base64 or hex.
# DATA_ENCRYPTION_KEY_CURRENT=
# DATA_ENCRYPTION_KEY_PREVIOUS=
# DATA_ENCRYPTION_KEY_ID=k1
