# Image tag to deploy (pin to a release tag like v1.2.3)
APP_VERSION=edge

# Public URL for the app (used by BetterAuth + CORS)
APP_URL=https://finance.example.com

# BetterAuth secret (required in production)
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=change-me

# Caddy site address:
# - Set to a domain (enables HTTPS automatically)
# - Or set to :80 for HTTP-only installs (no TLS)
CADDY_ADDRESS=finance.example.com
ACME_EMAIL=you@example.com

# Ports exposed on the host
HTTP_PORT=80
HTTPS_PORT=443

# Postgres
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_USER=financeuser
POSTGRES_PASSWORD=change-me
POSTGRES_DB=finance_db
DATABASE_URL=postgresql://financeuser:change-me@postgres:5432/finance_db

# Redis
REDIS_URL=redis://redis:6379/0

# Backend
BACKEND_URL=http://backend:8000
CORS_ALLOW_ORIGINS=https://finance.example.com
API_DOCS_ENABLED=false

# Storage (uploads + CSV imports)
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=uploads

# MCP (optional)
# Enable with: docker compose --profile mcp ...
# MCP_PORT=8001
# PERSONAL_FINANCE_API_KEY=pf_...

# Optional features / integrations
# OPENAI_API_KEY=
# LOGO_DEV_API_KEY=
# TOKEN_ENCRYPTION_KEY=  # generate: python -c 'import base64,os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())'
# PONTO_CLIENT_ID=
# PONTO_CLIENT_SECRET=
# PONTO_REDIRECT_URI=
# PONTO_SANDBOX=true
# KRAKEN_API_KEY=
# KRAKEN_PRIVATE_KEY=
