# Public URL for the app (single source of truth for auth + CORS defaults)
APP_URL=http://localhost:8080

# BetterAuth secret (required in production)
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=change-me

# Shared secret for app -> backend signed internal auth (required)
# Generate with: openssl rand -hex 32
INTERNAL_AUTH_SECRET=change-me

# Caddy site address:
# - Use :80 for localhost/HTTP-only installs (default)
# - Set to a domain to enable HTTPS automatically
CADDY_ADDRESS=:80
# Host port mappings for Caddy
HTTP_PORT=8080
# HTTPS_PORT=443
# ACME_EMAIL=you@example.com

# Postgres
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_USER=financeuser
POSTGRES_PASSWORD=change-me
POSTGRES_DB=finance_db
DATABASE_URL=postgresql://financeuser:change-me@postgres:5432/finance_db
# Production should enforce TLS:
# DATABASE_URL=postgresql://financeuser:change-me@postgres:5432/finance_db?sslmode=require

# Redis
REDIS_URL=redis://redis:6379/0

# Backend
BACKEND_URL=http://backend:8000
# Optional explicit CORS allowlist (comma-separated).
# Defaults to APP_URL when omitted.
# CORS_ALLOW_ORIGINS=http://localhost:8080

# Healthcheck URLs (optional overrides)
# BACKEND_HEALTHCHECK_URL=http://backend:8000/health
# APP_HEALTHCHECK_URL=http://app:3000/

# Build (optional)
# NEXT_DISABLE_TURBOPACK=1

# MCP
# Internal port is fixed at 8001.
# External host port defaults to 8001 and can be overridden.
# MCP_PORT=9001

# Optional features / integrations
# OPENAI_API_KEY=
# LOGO_DEV_API_KEY=

# Optional application-layer encryption (recommended for production).
# Use a 32-byte key encoded as base64 or hex.
# DATA_ENCRYPTION_KEY_CURRENT=
# DATA_ENCRYPTION_KEY_PREVIOUS=
# DATA_ENCRYPTION_KEY_ID=k1
